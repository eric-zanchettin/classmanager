{% extends "layout.njk" %}

{% block content %}

    <div class="animation">
        <h1>Registro deletado com Sucesso!</h1>
    </div>

<script src="/lottie.min.js"></script>
<script>

const lottieElement = document.querySelector('.animation')

lottie.loadAnimation({
    container: lottieElement, // the dom element that will contain the animation
    renderer: 'svg',
    loop: true,
    autoplay: true,
    path: '/15120-delete.json' // the path to the animation json
});

</script>

{% endblock %}