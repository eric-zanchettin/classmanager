{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar_url" style="background: url('{{ teacher.avatar_url }}') no-repeat center center / cover;"></section>
        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Professor(a)</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }} Anos</div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>{{ teacher.formation }}</div>
            </div>

            <div class="item">
                <div>Modalidade de Aula</div>
                <div>{{ teacher.classType }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                {% for class in teacher.classes %}
                <span>{{ class }}</span>
                {% endfor %}
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}<div>
            </div>

            <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}